{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ student.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ student.lastname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ student.phone }}</td>
            </tr>
            <tr>
                <th>School Year</th>
                <td>{{ student.schoolYear.name }} ({{ student.schoolYear.id }})</td>
            </tr>
            <tr>
                <th>Projects</th>
                <td>
                    <p>
                        {% if student.projects %}
                        <ul>
                            {% for project in student.projects %}
                            <li>{{ project.name }}</li>
                            {% endfor %}
                        </ul>
                        {% endif %}
                    </p>
                    <p>
                        {% for project in student.projects %}
                            {{ project.name }}{% if not loop.last%},{% endif %}
                        {% endfor %}
                    </p>
                </td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('student_index') }}">back to list</a>
    {% endif %}

    <a href="{{ path('student_edit', {'id': student.id}) }}">edit</a>
    
    {% if is_granted('ROLE_ADMIN') %}
    {{ include('student/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
